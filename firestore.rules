rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // match /{document=**} {
    //   allow read, write;
    // }
    match /extendedFamily/{fileName} {
    allow read, write: if !exists(resource.data);
    allow read: if request.auth.uid != null;
    allow create: if true;
    allow update, delete: if resource.data.uploader == request.auth.uid || 
    request.auth.token.admin == true;
    }
    
    match /allFamily/{fileName} {
    allow read, write: if !exists(resource.data);
    allow read: if request.auth.token.oneOfThirteen == true ||
    resource.data.uploader == request.auth.uid;
    allow create: if true;
    allow update, delete: if resource.data.uploader == request.auth.uid ||
    request.auth.token.admin == true;
    }
    
    match /theThirteen/{fileName} {
    allow read: if request.auth.token.oneOfThirteen == true ||
    resource.data.uploader == request.auth.uid;
    allow create: if true;
    allow update, delete: if resource.data.uploader == request.auth.uid ||
    request.auth.token.admin == true;
    }
    
    match /users/{fileName} {
    allow read: if request.auth.uid != null;
    allow create: if true;
    allow update, delete: if request.auth.uid == fileName ||
    request.auth.token.admin == true;
    }
  }
}